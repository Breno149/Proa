programa
{
	inclua biblioteca Util
	inteiro contador = 10
	funcao inicio()
	{
		enquanto (contador > 0)
		{
			limpa()
			escreva(contador, "\n")

			contador = contador - 1
			Util.aguarde(1000)
		}
	}
}
